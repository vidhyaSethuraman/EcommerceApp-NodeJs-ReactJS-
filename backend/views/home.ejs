                text-decoration: goldenrod;
            }

            nav div 
            {
              margin: 1rem 1.5rem ; 
            }

            nav input[type=text] 
            {
              padding: 0.5rem 0.5rem;
              padding-right: 20rem;
              font-size: 1rem;
              border: 1.5px solid #E4729F;
              outline-color: #E4729F;
              margin-top: 1.7rem;
            }

            
            .searchButton
            {
              float: right;
              padding: 0.65rem 10px;
              margin-right: 1rem;
              font-size: 1.2rem;
              border: 1.5px solid #E4729F;
              cursor: pointer;
              outline:#E4729F;
              margin-top: 1.7rem;
            }

            .searchButton:hover 
            {
              background: #ccc;
            }

            nav button
            {
                outline:none;
                border:none;
                background-color: white;
            }

            nav form button i, nav .profile
